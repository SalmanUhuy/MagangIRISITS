//Problem : Write a program and input two integers in main and pass them to default constructor of the class. Show the result of the additon of two numbers.
//Solution :

#include <iostream>
using namespace std;

class data{                 //kelas  
   public:                  //dapat diakses oleh semua orang
   int an1,an2;             //atribut dari angka 1(an1) & angka 2(an2) 
   data(int angka1,int angka2){                           //pembangun parameternya          
        an1=angka1;
	an2=angka2;
	cout <<"Memproses Angka \n";                    //print pemrosesan angka yang akan dimasukkan nantinya
    }
    int sum_angka(){return an1+an2;}                    //atribut dari penjumlahan angka yang akan dimasukkan nantinya
};

int main (){

    int angka1;
	int angka2;
	cout<<"Angka Pertama : ";
	cin>>angka1;
	cout<<"Angka Kedua : ";
	cin>>angka2;

	data set_nu(angka1,angka2);                                   //mengatur data angka menuju hasil

	cout << "Hasil penjumlahan:"<< set_nu.sum_angka()<<"\n";      //print hasil data yang sudah diproses

	return 0;
}

