//Problem : Perform addition operation on complex data using class and object. The program should ask for real and
            imaginary part of two complex numbers, and display the real and imaginary parts of their sum.
//Solution :

#include <iostream>
using namespace std;

class Umpama{                           //Kelas pada imagin atau umpama
	public:                         //Dapat diakses oleh semua orang 

	double x,y;                     //privat atribut

	Umpama(double ax, double ay){   //konstruktor parameter

	x=ax;
	y=ay;}
};

int main(){

     //print nilai dari data yang akan diproses yang meliputi dari input dan outputnya 
	double an1,an2;                 
	cout << "Angka pertama \n";       
	cout << "Angka asli:";            
	cin >> an1;                       
	cout << "Angka umpama:";          
	cin >> an2;
	
	Umpama angka1(an1,an2);
	cout << "Angka kedua \n";
     //print nilai dari data yang akan diproses yang meliputi dari input dan outputnya
        double an3,an4;
	cout << "Angka asli:";
	cin >> an3;
	cout << "Angka umpama:";
	cin >> an4;
	Umpama angka2(an3,an4);
  //print nilai dari angka asli yang akan diproses atau dijalankan pada terminalnya
    double asli;
    asli = angka1.x +angka2.x;
  //print nilai dari angka umpama yang akan diproses atau dijalankan pada terminalnya
    double umpama;
    umpama = angka2.x + angka1.y;
  //print dari hasil yang sudah diproses
    cout << "Jumla angka sebenarnya "<< asli << "\n";
    cout << "Jumlah angka umpama "<< umpama;

    return 0;
}
